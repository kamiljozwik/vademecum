{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"],
			"predeploy": [
				"npm --prefix \"$RESOURCE_DIR\" run lint",
				"npm --prefix \"$RESOURCE_DIR\" run build"
			]
		}
	],
	"emulators": {
		"functions": {
			"port": 3053
		},
		"firestore": {
			"port": 3054
		},
		"ui": {
			"enabled": true,
			"port": 3052
		},
		"singleProjectMode": true
	}
}
